# ============================================================================
# ENVIRONMENT VARIABLES FOR DEVELOPMENT (DOCKER)
# ============================================================================

# Application
NODE_ENV=development
PORT=3001

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://hospital_user:hospital_password@postgres:5432/hospital_db_dev?schema=public
POSTGRES_USER=hospital_user
POSTGRES_PASSWORD=hospital_password
POSTGRES_DB=hospital_db_dev

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:80

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev.log

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# pgAdmin Configuration
PGADMIN_EMAIL=admin@hospital.com
PGADMIN_PASSWORD=admin123

# API Configuration
API_PREFIX=/api/v1
API_VERSION=1.0.0-dev

# Next.js Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3002