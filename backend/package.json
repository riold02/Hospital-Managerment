{
  "name": "hospital-management-backend",
  "version": "1.0.0",
  "description": "Hospital Management System Backend API with Node.js and Supabase",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:connection": "node scripts/test-connection.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t hospital-backend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t hospital-backend:dev .",
    "docker:run": "docker run -p 3001:3001 --env-file .env hospital-backend",
    "docker:run:dev": "docker run -p 3001:3001 --env-file .env.development -v $(pwd):/app hospital-backend:dev",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "keywords": [
    "hospital",
    "management",
    "nodejs",
    "express",
    "prisma",
    "api"
  ],
  "author": "Hospital Management Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "colors": "^1.4.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.18.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
